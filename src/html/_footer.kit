<footer
  id="contact"
  class="footer section lazy"
  data-section="contact"
  data-bg="./assets/desktop/Home/CONTACT.png"
>
  <div class="wrapper">
    <div class="footer__content">
      <!-- Footer text -->
      <div class="footer__text-box">
        <h3 class="footer__heading heading-3">
          Get in<br />
          <span class="orange-highlight">Touch</span>
        </h3>
        <div class="footer__info-box">
          <div class="footer__icon icon-location_on"></div>
          <address class="footer__address">
            <a
              href="https://www.google.com/maps/place/OG+Albert/@1.3025168,103.8537803,20.08z/data=!3m1!5s0x31da19ba2fb9b1bb:0xbf467eda85c37d90!4m9!1m2!2m1!1s60+Albert+Street,+%2314-01,+OG+Albert+Complex,+Singapore,+189969!3m5!1s0x31da19ba33b5b8cb:0x3c04e160e8d7e3cc!8m2!3d1.3024488!4d103.8538286!15sCj42MCBBbGJlcnQgU3RyZWV0LCAjMTQtMDEsIE9HIEFsYmVydCBDb21wbGV4LCBTaW5nYXBvcmUsIDE4OTk2OSIDiAEBWjwiOjYwIGFsYmVydCBzdHJlZXQgIzE0LTAxIG9nIGFsYmVydCBjb21wbGV4IHNpbmdhcG9yZSAxODk5NjmSARBkZXBhcnRtZW50X3N0b3Jl?hl=sr"
              >60 Albert Street, #14-01,<br />
              OG Albert Complex, Singapore,<br />
              189969</a
            >
          </address>
        </div>
      </div>
      <!-- Footer form -->
      <div class="footer__form-box">
        <!-- Heading mobile -->
        <h3 class="footer__heading heading-3 footer__heading--mob">
          Get in
          <span class="orange-highlight">Touch</span>
        </h3>

        <form class="footer__form">
          <ul class="footer__form-list">
            <li class="footer__form-item">
              <label class="footer__form-label" for="name"
                >Name<span class="footer__form-required">*</span></label
              >
              <input
                class="footer__form-input"
                type="text"
                id="name"
                required
              />
            </li>
            <li class="footer__form-item">
              <label class="footer__form-label" for="email"
                >Email<span class="footer__form-required">*</span></label
              >
              <input
                class="footer__form-input"
                type="email"
                id="email"
                required
              />
            </li>
            <li class="footer__form-item">
              <label class="footer__form-label" for="subject"
                >Subject<span class="footer__form-required">*</span></label
              >
              <input
                class="footer__form-input"
                type="text"
                id="subject"
                required
              />
            </li>
            <li class="footer__form-item">
              <label class="footer__form-label" for="message"
                >Message<span class="footer__form-required">*</span></label
              >
              <textarea
                class="footer__form-textarea"
                id="message"
                name="message"
                required
              ></textarea>
            </li>
          </ul>
          <button class="footer__form-button btn" type="submit">
            <span class="footer__form-button-text btn-text">Send now</span
            ><span
              class="footer__form-button-icon icon-arrow_forward btn-icon"
            ></span>
          </button>
        </form>
      </div>
    </div>
  </div>
</footer>
